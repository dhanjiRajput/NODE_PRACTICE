<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include(`../Partials/Head`) %>
    <title>Home Page</title>
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
      .card {
        transition: transform 0.3s ease-in-out;
      }
      .card:hover {
        transform: scale(1.05);
      }
    </style>
  </head>
  <body style="background-color: #f8f9fa; text-align: center; font-family: Arial, sans-serif;">
    
    <%- include("../Partials/Navbar") %>

    <h1 style="font-size: 2.5rem; font-weight: bold; color: #333; margin-top: 20px;">Welcome to the Blogify Home  Page Explore Here Yourself...</h1> 
    
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-3">
        <% blog.forEach(element => { %>
          <div class="col">
            <div class="card shadow-lg border-0 h-100">
              <img src="<%= element.coverImage %>" class="card-img-top" alt="Blog Image" style="height: 200px; object-fit: cover;">
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= element.title %></h5>
                <a href="/api/v1/blog/<%= element.id %>" class="btn btn-primary w-100" style="background-color: #007bff; border: none; padding: 10px;">View</a>
              </div>
            </div>
          </div>
        <% }) %>    
      </div>  
    </div>

    <%- include("../Partials/Script") %>
  </body>
</html>
